<SimulationModelIncludeFile xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../scripts/XML/SimulaXMLSchema.xsd">
<!--PlantTemplate-->
	<SimulaDirective path="soil">
		<SimulaExternal name="Swms3d" unit="noUnit" function="Swms3d" minTimeStep="0.0001" maxTimeStep="0.1"/>
		<SimulaBase name="water">
			<SimulaTable name_column1="time" unit_column1="day" name_column2="totalWaterInColumn" unit_column2="cm3" function="getValuesFromSWMS"/>
			<SimulaTable name_column1="time" unit_column1="day" name_column2="totalWaterChangeInColumn" unit_column2="cm3" function="getValuesFromSWMS"/>
			<SimulaTable name_column1="time" unit_column1="day" name_column2="topBoundaryFluxRate" unit_column2="cm3/day" function="getValuesFromSWMS"/>
			<SimulaTable name_column1="time" unit_column1="day" name_column2="bottomBoundaryFluxRate" unit_column2="cm3/day" function="getValuesFromSWMS"/>
			<SimulaTable name_column1="time" unit_column1="day" name_column2="relativeWaterContentInTopLayer" unit_column2="%" function="getValuesFromSWMS"/>
			<SimulaVariable name="topBoundaryFlux" unit="cm3" function="usePath">0 0 
				<SimulaConstant name="path" type="string">topBoundaryFluxRate</SimulaConstant>
			</SimulaVariable>
			<SimulaVariable name="bottomBoundaryFlux" unit="cm3" function="usePath">0 0 
				<SimulaConstant name="path" type="string">bottomBoundaryFluxRate</SimulaConstant>
			</SimulaVariable>
			<SimulaTable name_column1="time" unit_column1="day" name_column2="totalSinkRate" unit_column2="cm3/day" function="getValuesFromSWMS"/>
			<SimulaVariable name="totalSink" unit="cm3" function="usePath">0 0 
				<SimulaConstant name="path" type="string">totalSinkRate</SimulaConstant>
			</SimulaVariable>
			<SimulaDerivative name="massBalanceError" unit="cm3" function="waterMassBalanceTest"/>
		</SimulaBase>
	</SimulaDirective>
	<SimulaDirective path="plants">
		<SimulaDerivative name="rootWaterUptake" function="sumOverAllPlants" unit="cm3"/>
	</SimulaDirective>
	<SimulaDirective path="plantTemplate">
		<SimulaDerivative name="rootWaterUptake" unit="cm3" function="plantTotalRatesRootFraction"/>
		<SimulaVariable name="rootWaterUptakeCheck" unit="cm3" function="waterUptakeAlmDoussanSchnepfModel"/>
		<SimulaVariable name="rootWaterOutflow" unit="cm3" function="useDerivative"/>
		<SimulaTable name_column2="rootWaterOutflowRate" unit_column2="cm3/day" name_column1="time" unit_column1="day" garbageCollectionOff="true">-1 0</SimulaTable>
		<SimulaTable name_column1="time" name_column2="waterPotentialAtTheCollar" unit_column1="day" unit_column2="hPa" function="getValuesFromPlantWaterUptake" garbageCollectionOff="true">-1 -10 0 -10</SimulaTable>
		<SimulaDerivative name="rootSystemHydraulicConductivity1" unit="cm3/day/g/hPa" function="hydraulicConductivityRootSystem"/>
		<SimulaDerivative name="rootSystemHydraulicConductivity2" unit="cm3/day/cm2/hPa" function="hydraulicConductivityRootSystem"/>
		<SimulaDerivative name="rootSystemHydraulicConductivity3" unit="cm3/day/cm3/hPa" function="hydraulicConductivityRootSystem"/>
		<SimulaBase name="water">
			<SimulaDerivative name="nutrientStressFactor" unit="100%" function="waterStressFactor"/>
		</SimulaBase>
	</SimulaDirective>

<!--ShootTemplate-->
	<SimulaDirective path="shootTemplate">
		<SimulaVariable name="potentialTranspiration" unit="cm3" function="useDerivative"/>
		<SimulaDerivative name="potentialTranspirationRate" unit="cm3/day" function="simplePotentialTranspirationRate"/>
	</SimulaDirective>

<!--HypocotylTemplate-->
	<SimulaDirective path="hypocotylTemplate">
		<SimulaDirective path="growthpoint">
			<SimulaConstant name="rootSegmentWaterUptake" unit="cm3">0</SimulaConstant>
			<SimulaTable name_column1="time" name_column2="hydraulicHeadAtRootSurface" unit_column1="day" unit_column2="cm" function="getValuesFromSWMS"/>
			<SimulaTable name_column1="time" name_column2="volumetricWaterContentAtTheRootSurface" unit_column1="day" unit_column2="cm3/cm3" function="getValuesFromSWMS"/>
		</SimulaDirective>
		<SimulaDerivative name="rootWaterUptake" unit="cm3" function="rootTotalRates"/>
		<SimulaDerivative name="rootSystemWaterUptake" unit="cm3" function="rootSystemTotalRates"/>
	</SimulaDirective>

<!--Sibling root template-->
	<SimulaDirective path="siblingRootTemplate">
		<SimulaDirective path="growthpoint">
			<SimulaConstant name="rootSegmentPotentialWaterUptake" unit="cm3">0</SimulaConstant>
			<SimulaConstant name="rootSegmentWaterUptake" unit="cm3">0</SimulaConstant>
			<SimulaTable name_column1="time" name_column2="hydraulicHeadAtRootSurface" unit_column1="day" unit_column2="cm" function="getValuesFromSWMS"/>
			<SimulaTable name_column1="time" name_column2="volumetricWaterContentAtTheRootSurface" unit_column1="day" unit_column2="cm3/cm3" function="getValuesFromSWMS"/>
		</SimulaDirective>
		<SimulaDerivative name="rootWaterUptake" unit="cm3" function="rootTotalRates"/>
		<SimulaDerivative name="rootSystemWaterUptake" unit="cm3" function="rootSystemTotalRates"/>
	</SimulaDirective>

<!--DataPointTemplate-->
	<SimulaDirective path="dataPointTemplate">
		<SimulaTable name_column1="time" name_column2="rootSegmentWaterUptake" unit_column1="day" unit_column2="cm3" function="getValuesFromPlantWaterUptake">-1 0 0 0</SimulaTable>
		<SimulaTable name_column1="time" name_column2="volumetricWaterContentAtTheRootSurface" unit_column1="day" unit_column2="cm3/cm3" function="getValuesFromSWMS" integrationFunction="BackwardEuler" minTimeStep="0.1" maxTimeStep="0.1" preferedTimeStep="0.10"/>
		<SimulaTable name_column1="time" name_column2="xylemWaterPotential" unit_column1="day" unit_column2="cm" function="getValuesFromPlantWaterUptake">-1 -10</SimulaTable>
		<SimulaTable name_column1="time" name_column2="hydraulicHeadAtRootSurface" unit_column1="day" unit_column2="cm" function="getValuesFromSWMS"/>
		<SimulaLink name="radialHydraulicConductivity" unit="cm/day/hPa"/>
		<SimulaLink name="lateralHydraulicConductivity" unit="cm4/day/hPa"/>
		<SimulaDerivative name="rootSegmentLateralHydraulicConductivity" unit="cm3/day/hPa" function="hydraulicConductivity"/>
		<SimulaDerivative name="rootSegmentRadialHydraulicConductivity" unit="cm3/day/hPa" function="hydraulicConductivity"/>
	</SimulaDirective>
</SimulationModelIncludeFile>