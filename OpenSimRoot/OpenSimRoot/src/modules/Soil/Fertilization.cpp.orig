void Fertilization::fertilization(const double & t0, tVector &fertil){
	// output:  fertil
	if(fertil.size()!=numNodes) fertil.resize(numNodes);
	double currentRate;
	rate->get(t0, currentRate);
	fertil = depthMultipliers*currentRate;
}

