{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/arch:AVX512",
                "/diagnostics:caret",
                "/DDEBUG",
                "/D_DEBUG",
                "/D__STDC_WANT_SECURE_LIB__",
                "/F0x10485100",
                "/favor:INTEL64",
                "/fp:strict",
                "/fpcvt:IA",
                "/fsanitize=address",
                "/guard:cf",
                "/Gw",
                "/I./",
                "/I./include/",
                "/jumptablerdata",
                "/MP",
                "/MTd",
                "/Zc:__cplusplus",
                "/Zc:preprocessor",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/TP",
                "/Wall",
                "/wd4514",
                "/wd4710",
                "/wd4711",
                "/wd4820",
                "/Od",
                "/std:c++20",
                "/Fe${fileDirname}/${fileBasenameNoExtension}.exe",
                "${file}",
                "/link /DEBUG:FULL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}
